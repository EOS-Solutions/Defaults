{
    "$id": "https://raw.githubusercontent.com/EOS-Solutions/Defaults/master/Schemas/Gordon/v1/servicehost.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "Name": {
            "type": "string",
            "description": "A descriptive name of the host machine."
        },
        "HostUri": {
            "type": "string",
            "description": "The URI to the host."
        },
        "Description": {
            "type": "string",
            "description": "A description."
        },
        "ApiKey": {
            "type": "string",
            "description": "Specifies the API key to use for this server, if required."
        },
        "Type": {
            "type": "string",
            "description": "The type of the host.",
            "enum": [
                "Server",
                "Container",
                "SaaS"
            ]
        }
    },
    "required": [
        "HostUri"
    ]
}